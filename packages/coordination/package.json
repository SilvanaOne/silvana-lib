{
  "name": "@silvana-one/coordination",
  "description": "Silvana Coordination Client",
  "version": "1.0.26",
  "author": "DFST",
  "bugs": "https://github.com/SilvanaOne/silvana-lib/issues",
  "dependencies": {
    "@mysten/sui": "^1.36.0",
    "mina-signer": "^3.0.7",
    "nanoid": "^5.1.5",
    "pinata": "^2.4.9"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "esbuild": "^0.25.6",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    "types": "./dist/node/index.d.ts",
    "node": {
      "import": "./dist/node/index.js",
      "require": "./dist/node/index.cjs"
    },
    "browser": "./dist/web/index.js",
    "default": "./dist/web/index.js"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://docs.silvana.one",
  "keywords": [
    "cloud",
    "silvana",
    "coordination",
    "client",
    "typescript"
  ],
  "license": "Apache-2.0",
  "main": "dist/web/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "SilvanaOne/silvana-lib.git",
  "scripts": {
    "build": "rm -rf dist && tsc && tsc --build tsconfig.web.json && node build-cjs.js",
    "release": "npm publish --access public",
    "test": "NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps -r dotenv/config --require dotenv/config --env-file=.env --test",
    "mvr": "npm run test test/mvr.test.ts",
    "agent": "npm run test test/agent.test.ts",
    "job": "npm run test test/job.test.ts",
    "app": "npm run test test/app_instance.test.ts"
  },
  "type": "module",
  "types": "./dist/node/index.d.ts"
}
